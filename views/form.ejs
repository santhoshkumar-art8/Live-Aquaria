  <body class="bg-light">
  

    <!-- Content -->
    <div class="container my-5 center">
   

        <div class="col-md-8  col-sm-6">
          <div class="card">
            <div class="card-header bg-warning text-white">
            
            <center>Place your order</center>
            </div>
            <div class="card-body">
              <form action="/" method="post">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Enter your name"
                     name="pname"
                    required
                  />
                </div>
               

    <div class="form-group">
                  <label for="email">Email</label>
                  <input
                    type="email"
                    name="email"
                    id="email"
                    class="form-control"
                    placeholder="you@awesome.com"
                    aria-describedby="emailHelp"
                    required
                  />
               
                </div>


                <div class="form-group">
                  <label for="mobile">Address</label>
                  <input
                    type="text-area"
                    class="form-control"
                    placeholder="Enter your address"
name ="address"
                    required
                  />
                </div>



            <div class="form-group">
                <label for="item">Choose your items:</label><br>
<input list="items"  class="form-control" name="item" id="item">

<datalist id="items">
  <option value="Protygrubs black soldier fly">
  <option value="Boltz Fish Food">
  <option value="Haqqani Betta Fish Food">
  <option value="Hallofeed Freeze Dried Blood Worms Fish Food">
  <option value="Hikari Tropical Discus">
 <option value="Hikari FFHIKARI011 Betta">
</datalist>
                </div>
     <div class="form-group">
                  <label for="qty">Quantity</label>
                  <input
                    type="number"
                    class="form-control"
                    name="qty"
                    required
                  />
                </div>

                <div class="form-group">
                  <input type="submit" class="btn btn-primary btn-block" value="Order now!">
                </div>
              </form>
            
            </div>
          </div>
        </div>
     
    </div>
    <!-- Bootstrap JS -->
    <script src="./assets/js/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
